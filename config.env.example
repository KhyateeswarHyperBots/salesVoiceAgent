# Twilio Configuration
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=your_twilio_phone_number_here
TO_PHONE_NUMBER=your_target_phone_number_here

# Voice Synthesis Configuration
VOICE_TYPE=twilio

# OpenAI Configuration (if using ChatGPT web search)
OPENAI_API_KEY=your_openai_api_key_here

# Calendar Configuration
CALENDAR_TYPE=local
# Options: "local" (saves to JSON file) or "google" (Google Calendar API)

# Local Calendar Settings (when CALENDAR_TYPE=local)
LOCAL_CALENDAR_FILE=calendar_events.json

# Google Calendar Settings (when CALENDAR_TYPE=google)
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.pickle
GOOGLE_CALENDAR_ID=primary
# Note: Download credentials.json from Google Cloud Console
# Enable Google Calendar API and create OAuth 2.0 credentials

# Voice Settings
VOICE_RATE=180
VOICE_VOLUME=0.85
VOICE_LANGUAGE=en-US

# Ollama Configuration
OLLAMA_MODEL=llama3.2:3b
OLLAMA_BASE_URL=http://localhost:11434

# Application Settings
DEBUG=false
LOG_LEVEL=INFO 